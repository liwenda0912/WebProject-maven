<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="Dao.Tb_user">
    <select id="findAll" resultType="entity.User">
        select * from user
    </select>
    <update id="upDataUser" parameterType="entity.User">
        update user
        <set>
            <if test="username != null and username  != '' ">
                username = #{username}
            </if>
               ,address = #{address}
               ,phone =#{phone}
               ,zip =#{zip}
               ,province=#{province}
               ,city = #{city}
        </set>
        <where>
                id = #{id}
        </where>
    </update>
</mapper>

